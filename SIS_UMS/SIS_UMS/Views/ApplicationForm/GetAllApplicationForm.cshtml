@model List<ApplicationForm>

@{
    ViewBag.Title = "USAL | Application Forms";
}

@{
    Layout = "_Layout";
}


<style>
   
.pagination .active {
        background-color: #007BFF;
        color: white;
        border-color: #007BFF;
}

    .wider-header {
        width: 200px;
    }

</style>

<section class="content media-screen">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card-header">
                    <h3 class="card-title">DataTable with default features</h3> <!-- Card title -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="form-group">
                                <a asp-controller="ApplicationForm" asp-action="CreateApplicationForm" class="btn btn-primary">Create New</a>
                            </div>
                            <!-- DataTables Buttons -->
                            <div class="col-sm-12 col-md-6">
                                <div class="dt-buttons btn-group flex-wrap">
                                    <!-- Buttons for copying, exporting data, etc. -->
                                    <button class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>Copy</span></button>
                                    <button class="btn btn-secondary buttons-csv buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>CSV</span></button>
                                    <button class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>Excel</span></button>
                                    <button class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>PDF</span></button>
                                    <button class="btn btn-secondary buttons-print" tabindex="0" aria-controls="example1" type="button"><span>Print</span></button>
                                    <div class="btn-group">
                                        <button class="btn btn-secondary buttons-collection dropdown-toggle buttons-colvis" tabindex="0" aria-controls="example1" type="button" aria-haspopup="true"><span>Column visibility</span><span class="dt-down-arrow"></span></button>
                                    </div>
                                </div>
                            </div>
                            <!-- DataTables Search Box -->
                            <div class="col-sm-12 col-md-6">
                                <div id="example1_filter" class="dataTables_filter">
                                    <label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="example1"></label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <!-- DataTable -->
                                <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="example1_info">
                                    <thead>
                                        <tr>
                                            <!-- Define table headers -->
                                            <th class="sorting sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Form ID: activate to sort column descending">Form ID</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Office Name: activate to sort column ascending">Office Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Student ID: activate to sort column ascending">Student ID</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Application Date: activate to sort column ascending">Application Date</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Application Type: activate to sort column ascending">Application Type</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Status: activate to sort column ascending">Status</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Additional Application Details: activate to sort column ascending">Additional Application Details</th>
                                            <th class="wider-header">Action</th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        <!-- Loop through the model data to populate the table -->
                                        @foreach (var applicationForm in Model)
                                        {
                                            <tr class="odd">
                                                <td class="dtr-control sorting_1" tabindex="0">@applicationForm.FormId</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@applicationForm.OfficeName</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@applicationForm.StudentId</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@applicationForm.ApplicationDate</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@applicationForm.ApplicationType</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@applicationForm.Status</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@applicationForm.AdditionalApplicationDetails</td>
                                                <td class="project-actions text-right">
                                                    <a class="btn btn-primary btn-sm" href="/application-form/view/@applicationForm.FormId">
                                                        <i class="fas fa-folder"></i> View
                                                    </a>
                                                    <a class="btn btn-info btn-sm" href="/application-form/update-application-form/@applicationForm.FormId">
                                                        <i class="fas fa-pencil-alt"></i> Edit
                                                    </a>

                                                    <a class="btn btn-danger btn-sm d-inline" href="#" data-form-id="@applicationForm.FormId">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </a>
                                                </td>



                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <!-- Define footer columns -->
                                            <th rowspan="1" colspan="1">Form ID</th>
                                            <th rowspan="1" colspan="1">Office Name</th>
                                            <th rowspan="1" colspan="1">Student ID</th>
                                            <th rowspan="1" colspan="1">Application Date</th>
                                            <th rowspan="1" colspan="1">Application Type</th>
                                            <th rowspan="1" colspan="1">Status</th>
                                            <th rowspan="1" colspan="1">Additional Application Details</th>
                                            <th rowspan="1" colspan="1">Actions</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-7">
                                <!-- Pagination -->
                                <div class="pagination">
                                    @if (ViewBag.TotalPages > 1)
                                    {
                                        @if (ViewBag.CurrentPage > 1)
                                        {
                                            <a href="@Url.Action("GetAllApplicationForm", new { page = ViewBag.CurrentPage - 1 })" class="page-link">Previous</a>
                                        }

                                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                        {
                                            <a href="@Url.Action("GetAllApplicationForm", new { page = i })" class="page-link @(ViewBag.CurrentPage == i ? "active" : "")">@i</a>
                                        }

                                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                        {
                                            <a href="@Url.Action("GetAllApplicationForm", new { page = ViewBag.CurrentPage + 1 })" class="page-link">Next</a>
                                        }
                                    }
                                </div>


                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this application form?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).on('click', 'a[data-form-id]', function (e) {
            e.preventDefault();

            var formId = $(this).data('form-id');

            $('#deleteConfirmationModal').modal('show');

            $('#confirmDelete').on('click', function () {
                $('#deleteConfirmationModal').modal('hide');

                $.ajax({
                    url: '/application-form/delete/' + formId,
                    type: 'POST',
                    success: function (json) {
                        if (json.isRedirect) {
                            window.location.href = '/application-form/all-application-form';
                        }
                    },
                    error: function () {
                        alert('An error occurred while deleting the application form.');
                    }
                });
            });
        });
    </script>
}