@model List<Scholarships>
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
</head>
<body>
    <h1>All Scholarships</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Scholarship ID</th>
                <th>Scholarship type</th>
                <th>% in $</th>
                <th>% in L.L</th>
                <th>Created At</th>
                <th>Actions</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var scholarships in Model)
            {
                <tr>
                    <td>@scholarships.scholarship_id</td>
                    <td>@scholarships.scholarship_type</td>
                    <td>@scholarships.percentage_in_dollar</td>
                    <td>@scholarships.percentage_in_lebanese</td>
                    <td>@scholarships.created_at</td>

                    <td>
                        <form asp-controller="Scholarships" asp-action="DeleteScholarship" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="scholarship_id" value="@scholarships.scholarship_id" />

                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this role?')">Delete</button>
                        </form> 
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="AddScholarship">Add New Scholarship</a>

    <script>
        function confirmDelete() {
            return confirm('Are you sure you want to delete this Scholarship?');
        }
    </script>
</body>
</html>