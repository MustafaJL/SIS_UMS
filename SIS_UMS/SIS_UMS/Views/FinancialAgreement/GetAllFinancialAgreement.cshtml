@model List<FinancialAgreement>

@{
    ViewBag.Title = "USAL | Financial Agreements";
}

@{
    Layout = "_Layout";
}


<style>

    .pagination .active {
        background-color: #007BFF;
        color: white;
        border-color: #007BFF;
    }

    .wider-header {
        min-width: 200px;
    }

</style>

<section class="content media-screen">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card-header">
                    <h3 class="card-title">DataTable with default features</h3> <!-- Card title -->
                </div>
                <!-- /.card-header -->
                <div class="card-body">
                    <div id="example1_wrapper" class="dataTables_wrapper dt-bootstrap4">
                        <div class="row">
                            <div class="form-group">
                                <a asp-controller="FinancialAgreement" asp-action="CreateFinancialAgreement" class="btn btn-primary">Create New</a>
                            </div>
                            <!-- DataTables Buttons -->
                            <div class="col-sm-12 col-md-6">
                                <div class="dt-buttons btn-group flex-wrap">
                                    <!-- Buttons for copying, exporting data, edit -->
                                    <button class="btn btn-secondary buttons-copy buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>Copy</span></button>
                                    <button class="btn btn-secondary buttons-csv buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>CSV</span></button>
                                    <button class="btn btn-secondary buttons-excel buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>Excel</span></button>
                                    <button class="btn btn-secondary buttons-pdf buttons-html5" tabindex="0" aria-controls="example1" type="button"><span>PDF</span></button>
                                    <button class="btn btn-secondary buttons-print" tabindex="0" aria-controls="example1" type="button"><span>Print</span></button>
                                    <div class="btn-group">
                                        <button class="btn btn-secondary buttons-collection dropdown-toggle buttons-colvis" tabindex="0" aria-controls="example1" type="button" aria-haspopup="true"><span>Column visibility</span><span class="dt-down-arrow"></span></button>
                                    </div>
                                </div>
                            </div>
                            <!-- DataTables Search Box -->
                            <div class="col-sm-12 col-md-6">
                                <div id="example1_filter" class="dataTables_filter">
                                    <label>Search:<input type="search" class="form-control form-control-sm" placeholder="" aria-controls="example1"></label>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12">
                                <!-- DataTable -->
                                <table id="example1" class="table table-bordered table-striped dataTable dtr-inline" aria-describedby="example1_info">
                                    <thead>
                                        <tr>
                                            <!-- Define table headers -->
                                            <th class="sorting sorting_asc" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Financial Agreement ID: activate to sort column descending">Financial Agreement ID</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Office Name: activate to sort column ascending">Office Name</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Student ID: activate to sort column ascending">Student ID</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Agreement Date: activate to sort column ascending">Agreement Date</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Agreement Details: activate to sort column ascending">Agreement Details</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Start Date: activate to sort column ascending">Start Date</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="End Date: activate to sort column ascending">End Date</th>
                                            <th class="sorting" tabindex="0" aria-controls="example1" rowspan="1" colspan="1" aria-label="Is Active: activate to sort column ascending">Is Active</th>
                                            <th class="wider-header">Action</th>
                                        </tr>

                                    </thead>
                                    <tbody>
                                        <!-- Loop through the model data to populate the table -->
                                        @foreach (var financialAgreement in Model)
                                        {
                                            <tr class="odd">
                                                <td class="dtr-control sorting_1" tabindex="0">@financialAgreement.FinancialAgreementId</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@financialAgreement.OfficeName</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@financialAgreement.StudentId</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@financialAgreement.AgreementDate</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@financialAgreement.AgreementDetails</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@financialAgreement.StartDate</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@financialAgreement.EndDate</td>
                                                <td class="dtr-control sorting_1" tabindex="0">@financialAgreement.IsActive</td>                                                
                                                <td class="project-actions text-right">
                                                    <a class="btn btn-primary btn-sm" href="/financial-agreement/view-financial-agreement/@financialAgreement.FinancialAgreementId">
                                                        <i class="fas fa-folder"></i> View
                                                    </a>
                                                    <a class="btn btn-info btn-sm" href="/financial-agreement/update-financial-agreement/@financialAgreement.FinancialAgreementId">
                                                        <i class="fas fa-pencil-alt"></i> Edit
                                                    </a>

                                                    <a class="btn btn-danger btn-sm d-inline" href="/financial-agreement/delete/" data-financial-agreement-id="@financialAgreement.FinancialAgreementId">
                                                        <i class="fas fa-trash"></i> Delete
                                                    </a>
                                                </td>



                                            </tr>
                                        }
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <!-- Define footer columns -->
                                            <th rowspan="1" colspan="1">Financia lAgreement Id</th>
                                            <th rowspan="1" colspan="1">Office Name</th>
                                            <th rowspan="1" colspan="1">Student ID</th>
                                            <th rowspan="1" colspan="1">Agreement Date</th>
                                            <th rowspan="1" colspan="1">Agreement Details</th>
                                            <th rowspan="1" colspan="1">Start Date</th>
                                            <th rowspan="1" colspan="1">End Date</th>
                                            <th rowspan="1" colspan="1">Is Active</th>                                   
                                            <th rowspan="1" colspan="1">Actions</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-7">
                                <!-- Pagination -->
                                <div class="pagination">
                                    @if (ViewBag.TotalPages > 1)
                                    {
                                        @if (ViewBag.CurrentPage > 1)
                                        {
                                            <a href="@Url.Action("GetAllFinancialAgreement", new { page = ViewBag.CurrentPage - 1 })" class="page-link">Previous</a>
                                        }

                                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                                        {
                                            <a href="@Url.Action("GetAllFinancialAgreement", new { page = i })" class="page-link @(ViewBag.CurrentPage == i ? "active" : "")">@i</a>
                                        }

                                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                                        {
                                            <a href="@Url.Action("GetAllFinancialAgreement", new { page = ViewBag.CurrentPage + 1 })" class="page-link">Next</a>
                                        }
                                    }
                                </div>


                            </div>
                        </div>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationModalLabel">Confirm Deletion</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this financial agreement?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        $(document).on('click', 'a[data-financial-agreement-id]', function (e) {
            e.preventDefault();

            var financialAgreementId = $(this).data('financial-agreement-id');

            $('#deleteConfirmationModal').modal('show');

            $('#confirmDelete').on('click', function () {
                $('#deleteConfirmationModal').modal('hide');

                $.ajax({
                    url: '/financial-agreement/delete/' + financialAgreementId,
                    type: 'POST',
                    success: function (json) {
                        if (json.isRedirect) {
                            window.location.href = '/financial-agreement/all-financial-agreement';
                        }
                    },
                    error: function () {
                        alert('An error occurred while deleting the financial agreement.');
                    }
                });
            });
        });
    </script>
}