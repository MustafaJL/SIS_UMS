@model SIS_UMS.Models.View_Model.DepartmentFacultyViewModel

@{
    ViewData["Title"] = "CreateDepartment";
}


<h4>Department</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.department.department_name" class="control-label"></label>
                <input asp-for="@Model.department.department_name" class="form-control" />
                <span asp-validation-for="@Model.department.department_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.department.department_phone_number" class="control-label"></label>
                <input asp-for="@Model.department.department_phone_number" class="form-control" />
                <span asp-validation-for="@Model.department.department_phone_number" class="text-danger"></span>
            </div>
            <div class="form-group">
                 <label asp-for="@Model.department.faculty_id">Select Faculty:</label>
                 <select asp-for="@Model.department.faculty_id" class="form-control">
                 <option asp-for="Model.department.faculty_id">-- Select Faculty --</option>
                    @foreach (var faculty in Model.faculties)
                    {
                       <option value="@faculty.faculty_id">@faculty.faculty_name</option> 
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="@Model.department.department_uni_email" class="control-label"></label>
                <input asp-for="@Model.department.department_uni_email" class="form-control" />
                <span asp-validation-for="@Model.department.department_uni_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
