@model Role
@{
    ViewData["Title"] = "Home Page";
}

<!DOCTYPE html>
<html lang="en">


<h1>Add Role</h1>

<form asp-controller="Role" asp-action="CreateRole" method="post">
    <div class="form-group">
        <label asp-for="role_name"></label>
        <input asp-for="role_name" class="form-control" />
        <span asp-validation-for="role_name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

<a asp-action="AllRoles">Back to List</a>

</html>